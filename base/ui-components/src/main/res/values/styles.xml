<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorAccent">@color/white</item>
        <item name="hintTextColor">@color/white_800</item>
        <item name="android:textColorHint">@color/white_800</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <!--Text-->
    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Title.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>