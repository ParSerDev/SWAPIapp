<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parserdev.swapiapp.features.favorites.presentation.FavoritesFragment">

    <ImageView
        android:id="@+id/image_work_in_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/ic_work_in_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_work_in_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/work_in_progress"
        style="@style/Text"
        app:layout_constraintEnd_toEndOf="@id/image_work_in_progress"
        app:layout_constraintStart_toStartOf="@id/image_work_in_progress"
        app:layout_constraintTop_toBottomOf="@id/image_work_in_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>